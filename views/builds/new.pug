html
    head 
        title create
        link(rel="stylesheet", href="/css/style.css")
        //- link(rel="stylesheet", href="https://unpkg.com/terminal.css@0.7.1/dist/terminal.min.css")
    body
        header
            h1 Create Your Character's Build
            nav 
                ul
                    li 
                        a(href='/') Main Hub
                    li 
                        a(href='/builds/') Builds
        main.side-background
            form(action="/builds", method="post")
                select(name='infoId')
                    for info in infos
                        option(value=`${info._id}`) #{info.name}
                    //- a(href=info._id) info
                
                p Build Name:
                    input(type="text", name="bname", class='info-input')
                
                div.radio
                    p Background:
                
                    label.square#rad1(for="nomad") Nomad
                        input(
                            type="radio" 
                            name="background" 
                            value="nomad"
                            id="nomad"
                        )
                    br
                    label.square#rad2(for="street") Street Kid
                        input(
                            type="radio" 
                            name="background" 
                            value="street"
                            id="street"
                        )
                    br
                    label.square#rad3(for="corpo") Corpo
                        input(
                            type="radio" 
                            name="background" 
                            value="corpo"
                            id="corpo"
                        )
                    br

                div.radio
                    p Class:
                    |
                    label.square#rad4(for="solo") Solo
                        input(
                            type="radio" 
                            name="class" 
                            value='solo'
                            id='solo'
                        )
                    br
                    label.square#rad5(for="techie") Techie
                        input(
                            type="radio" 
                            name="class" 
                            value='techie'
                            id='techie'
                        )
                    br
                    label.square#rad6(for="netrunner") Netrunner
                        input(
                            type="radio" 
                            name="class" 
                            value='netrunner'
                            id='netrunner'
                        )
                    br
                    
                //- label(for="") Strength
                //-     #input_div
                //-         input#count(type='text', size='25', value='1')
                //-         input#moins(type='button', value='-', onclick='minus()')
                //-         input#plus(type='button', value='+', onclick='plus()')
                div.column
                    p Strength:
                    input(type="number", name="strength", class='info-input')

                    p Constitution:
                    input(type="number", name="constitution", class='info-input')

                    p Intelligence:
                    input(type="number", name="intelligence", class='info-input')
                div.column
                    p Reflexes:
                    input(type="number", name="reflexes", class='info-input')

                    p Tech:
                    input(type="number", name="tech", class='info-input')

                    p Cool:
                    input(type="number", name="cool", class='info-input')

                |
                p ---------------------------------------------------------
                |
                label(for="prime") Primary Weapon
                select(name="prime")
                    outgroup
                        option(value="Mantis Blades") Mantis Blades
                        option(value="Gravity Hammer") Gravity Hammer
                        option(value="Katana") Katana   
                    optgroup 
                    label Ranged
                        option(value="Constitutional Arms M2067 Defender") Constitutional Arms M2067 Defender
                    option(value="Militech_ARK-44") Militech_ARK-44
                    option(value="Militech_M-10AF_Lexington") Militech_M-10AF_Lexington
                    option(value="Militech_Crusher") Militech_Crusher
                    option(value="Militech_M-31A1_AICW") Militech_M-31A1_AICW
                br
                label(for="ranged") Ranged Weapons
                select(name="ranged")
                    option(value="Constitutional Arms M2067 Defender") Constitutional Arms M2067 Defender
                    option(value="Militech_ARK-44") Militech_ARK-44
                    option(value="Militech_M-10AF_Lexington") Militech_M-10AF_Lexington
                    option(value="Militech_Crusher") Militech_Crusher
                    option(value="Militech_M-31A1_AICW") Militech_M-31A1_AICW
                br
                
                
                button(type="submit") Submit

                
